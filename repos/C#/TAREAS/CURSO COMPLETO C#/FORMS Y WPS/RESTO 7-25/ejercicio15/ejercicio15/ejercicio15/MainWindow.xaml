        <GroupBox Header="" HorizontalAlignment="Left" Height="100" Margin="10,279,0,0" VerticalAlignment="Top" Width="455" Content="Promedio"/>
        <TextBox x:Name="text2" HorizontalAlignment="Left" Height="23" Margin="130,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="290,143,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>

    </Grid>
</Window>
