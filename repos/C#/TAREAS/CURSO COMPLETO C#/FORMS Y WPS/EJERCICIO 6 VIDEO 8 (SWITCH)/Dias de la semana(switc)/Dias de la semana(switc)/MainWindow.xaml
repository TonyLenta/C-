        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="146,158,0,0" Grid.Column="1"/>
        <Label Content="Numero" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="207,80,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="146,83,0,0" Grid.Column="1"/>
        <TextBox x:Name="txtDia" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="146,314,0,0" Grid.Column="1"/>

    </Grid>
</Window>
